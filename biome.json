{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"maxSize": 4194304,
		"ignoreUnknown": false,
		"ignore": ["node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"organizeImports": {
		"enabled": false
	}
}
